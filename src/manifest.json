{
  "author": "Nidhognit",
  "manifest_version": 2,
  "name": "Header View",
  "short_name": "Header View",
  "version": "1.0.5",
  "background": {
    "persistent": true,
    "scripts": ["listener.bundle.js"]
  },
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_popup": "popup.html",
    "default_title": "View HTTP headers"
  },
  "description": "View and inspect HTTP Headers",
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "240": "icons/240.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },
  "permissions": [
    "tabs",
    "webRequest",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ]
}
